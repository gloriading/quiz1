
<%- include('../partials/header') %>



      <form action="/clucks" method="post"  enctype="multipart/form-data" class="mt-4">

        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" name="username" class="form-control" id="username" placeholder="e.g. Tom Lee" required>
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          <textarea name="content" class="form-control" rows="4" cols="80" id="content" placeholder="I am in a test now..."></textarea>
        </div>
        <div class="form-group mt-3">
          <input class="form-control" type="file" name="picture" value="">
        </div>

        <button type="submit" name="submit" value="submit" class="btn btn-outline-secondary float-right">Cluck!</button>
      </form>


